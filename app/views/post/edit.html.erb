<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post) do |f| %>
        <label>Title :</label>
        <%= f.text_field :title %>
        <label>Message :</label>
        <%= f.text_area :body %>
        <label>Hashtags :</label>
        <%= f.text_area :hashtags %>
        <label>Image :</label>
        <%= image_tag @post.image %>
        <%= f.file_field :image %>
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>