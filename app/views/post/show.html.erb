<h2><%= @post.title %></h2>
<% if @post.image != nil %>
 <%= image_tag @post.image %>
<% end %>
<p><%= @post.body %></p>

<% if current_user %>
    <% if current_user.uid == @post.uid %>       
            <li><%= link_to 'Edit', edit_post_path(@post) %></li>
            <li><%= link_to 'Destroy', post_path(@post),
            method: :delete,
            data: { confirm: 'Are you sure?' } %></li>
    <% end %>
<% end %>
</tr>